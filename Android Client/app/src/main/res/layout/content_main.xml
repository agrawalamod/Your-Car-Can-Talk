<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.learn2crack.gcmdemo.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Register Device" />

    <Button
        android:text="getdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="59dp" />

    <TextView
        android:text="Timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/timestamp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        tools:text="Timestamp" />

    <TextView
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/Speed"
        tools:text="Speed"
        android:textSize="24sp"
        android:layout_below="@+id/timestamp"
        android:layout_alignStart="@+id/Mileage" />

    <TextView
        android:text="Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textSize="24sp"
        android:id="@+id/distance"
        tools:text="Distance"
        android:layout_below="@+id/Mileage"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textSize="24sp"
        android:id="@+id/Mileage"
        tools:text="Mileage"
        android:layout_below="@+id/Speed"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Distance to go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/Distance_to_go"
        android:textSize="24sp"
        android:layout_below="@+id/distance"
        android:layout_alignParentStart="true"
        tools:text="Distance to go" />

    <TextView
        android:text="Fuel Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Distance_to_go"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:id="@+id/fuel_remaining"
        android:textSize="24sp"
        tools:text="Fuel Remaining" />

    <TextView
        android:text="0"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Speed"
        android:layout_alignStart="@+id/timestamp_value"
        android:id="@+id/speed_value"
        android:textSize="24sp"
        tools:text="0"
        android:textAlignment="viewEnd" />

    <TextView
        android:text="0"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Mileage"
        android:layout_alignStart="@+id/speed_value"
        android:id="@+id/mileage_value"
        android:textSize="24sp"
        tools:text="0"
        android:textAlignment="viewEnd" />

    <TextView
        android:text="0"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/distance"
        android:layout_alignStart="@+id/mileage_value"
        android:id="@+id/distance_value"
        android:textSize="24sp"
        android:textAlignment="viewEnd" />

    <TextView
        android:text="0"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fuel_remaining"
        android:layout_alignEnd="@+id/distance_to_gp_value"
        android:id="@+id/fuel_remaining_value"
        android:textSize="24sp"
        tools:text="0"
        android:textAlignment="viewEnd" />

    <TextView
        android:text="0"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:id="@+id/distance_to_gp_value"
        android:textSize="24sp"
        tools:text="0"
        android:layout_above="@+id/fuel_remaining"
        android:layout_alignStart="@+id/distance_value"
        android:textAlignment="viewEnd" />

    <TextView
        android:text="0"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:id="@+id/timestamp_value"
        android:textSize="24sp"
        tools:text="0"
        android:layout_alignBaseline="@+id/timestamp"
        android:layout_alignBottom="@+id/timestamp"
        android:layout_alignEnd="@+id/button"
        android:textAlignment="viewEnd" />
</RelativeLayout>
